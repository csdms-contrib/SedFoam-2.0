FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

expressions
 (
	alpha1
    	{
		field alpha;
		expression "0.55*0.5*(1.0+tanh((pos().y-0.035)/(0.03-pos().y)*10.0))";
                keepPatches 1;
	}
	alpha2
        {
                field alpha;
                expression "0.55";
                condition "pos().y < 0.03";
		keepPatches 1;
        }
        Ua
        {
                field Ua;
		expression "vector(0, 0, 0)";
                keepPatches 1;
        }
        Ub
        {
                field Ub;
		expression "vector(0, 0, 0)";
                keepPatches 1;
        }
 );

