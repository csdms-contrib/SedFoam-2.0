dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inandouthalf11
    {
//	type		fixedValue;
//	value		uniform (0 0 0);
        type            groovyBC;
        refValue        uniform ( 0 0 0);
        refGradient     uniform (0 0 0);
        valueFraction   uniform 1;
        value           uniform (0 0 0);
        //        valueExpression "vector(inletprofileua(pos().y),inletprofileva(pos().y),0)";
        valueExpression "(0.0369/0.41)*log(30.0*mag(pos().y)/(2.5*0.00025))*vector(1,0,0)";
        gradientExpression "vector(0,0,0)";
        fractionExpression "1";
        evaluateDuringConstruction 1;
        lookuptables    (
{
        name            inletprofileua;
        fileName        "$FOAM_CASE/1d_profil/Ub.xy";
        outOfBounds     clamp;
}
{
        name            inletprofileva;
        fileName        "$FOAM_CASE/1d_profil/Va.xy";
        outOfBounds     clamp;
}
);
    }
    inandouthalf12
    {
        type            directionMixed;
        refValue uniform (0 0 0);
        refGradient uniform (0 0 0);
        valueFraction uniform (0 0 0 1 0 1);
    }
    inandouthalf21
